@model List<Infra.ViewModel.ChamadoViewModel>

<div>
    <h3>Tabela de Chamados</h3>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descrição</th>
            <th scope="col">Prioridade</th>
            <th scope="col">Severidade</th>
            <th scope="col">Sistema</th>
            <th scope="col">Usuário</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            foreach (var chamado in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => chamado.Id)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Prioridade.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Severidade.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Sistema.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => chamado.Funcionario.Nome )</td>
                </tr>
            }
        } else
        {
            <tr><td colspan="8">Não possui informação.</td></tr>
        }

    </tbody>
</table>
